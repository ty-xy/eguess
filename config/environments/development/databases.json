{
    "orm": {
        "adapters": {
            "disk": "sails-disk",
            "mongo": "sails-mongo"
        },
        "defaultConnection": "parana",
        "connections": {
            "default": {
                "adapter": "disk",
                "filePath": ".tmp/",
                "fileName": "default.db",
                "migrate": "alter"
            },
            "permanent": {
                "adapter": "disk",
                "filePath": "./data/",
                "fileName": "permanent.db",
                "migrate": "alter"
            },
            "parana": {
                "adapter": "mongo",
                "host": "localhost",
                "port": 27017,
                "user": "",
                "password": "",
                "database": "parana"
            }
        }
    }
}